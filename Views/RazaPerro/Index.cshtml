@{
    ViewData["Title"] = "Razas de Perros";
}

<h1>Razas de Perros A-Z</h1>

<!-- Contenedor principal -->
<div id="lista-razas" data-category="perros">
</div>

<!-- Controles de paginación -->
<div style="margin-top: 20px;">
    <button id="prevBtn">Anterior</button>
    <span id="pageInfo"></span>
    <button id="nextBtn">Siguiente</button>
</div>

<script>
// Lista con al menos 100 razas (puedes añadir más)
const razas = [
    { nombre: "Affenpinscher", peso: "3-6 kg", tamaño: "Pequeño", edad: 12 },
    { nombre: "Akita", peso: "32-59 kg", tamaño: "Grande", edad: 10 },
    { nombre: "Akita Americano", peso: "32-59 kg", tamaño: "Grande", edad: 10 },
    { nombre: "Alaskan Malamute", peso: "34-39 kg", tamaño: "Grande", edad: 10 },
    { nombre: "American Staffordshire Terrier", peso: "18-31 kg", tamaño: "Mediano", edad: 12 },
    { nombre: "Basenji", peso: "9-12 kg", tamaño: "Pequeño", edad: 14 },
    { nombre: "Beagle", peso: "9-11 kg", tamaño: "Pequeño", edad: 13 },
    { nombre: "Bearded Collie", peso: "18-27 kg", tamaño: "Mediano", edad: 12 },
    { nombre: "Bedlington Terrier", peso: "8-10 kg", tamaño: "Pequeño", edad: 14 },
    { nombre: "Bichón Frisé", peso: "5-8 kg", tamaño: "Pequeño", edad: 14 },
    { nombre: "Bichón Maltés", peso: "3-4 kg", tamaño: "Pequeño", edad: 14 },
    { nombre: "Bloodhound", peso: "36-50 kg", tamaño: "Grande", edad: 10 },
    { nombre: "Bobtail", peso: "27-45 kg", tamaño: "Grande", edad: 12 },
    { nombre: "Border Collie", peso: "14-20 kg", tamaño: "Mediano", edad: 13 },
    { nombre: "Boston Terrier", peso: "5-11 kg", tamaño: "Pequeño", edad: 13 },
    { nombre: "Boxer", peso: "25-32 kg", tamaño: "Mediano", edad: 10 },
    { nombre: "Braco Alemán", peso: "25-32 kg", tamaño: "Mediano", edad: 12 },
    { nombre: "Bull Terrier", peso: "20-35 kg", tamaño: "Mediano", edad: 12 },
    { nombre: "Bulldog Francés", peso: "8-14 kg", tamaño: "Pequeño", edad: 11 },
    { nombre: "Bulldog Inglés", peso: "18-23 kg", tamaño: "Mediano", edad: 8 },
    // ... aquí agregar hasta completar 100 razas o más
];

// Variables de paginación
let currentPage = 1;
const itemsPerPage = 10;
const totalPages = Math.ceil(razas.length / itemsPerPage);

function mostrarRazas() {
    const start = (currentPage - 1) * itemsPerPage;
    const end = start + itemsPerPage;
    const razasPagina = razas.slice(start, end);

    const contenedor = document.getElementById("lista-razas");
    contenedor.innerHTML = "";

    razasPagina.forEach(r => {
        const div = document.createElement("div");
        div.setAttribute("data-category", "perros");
        div.style.border = "1px solid #ccc";
        div.style.padding = "8px";
        div.style.margin = "5px";
        div.style.borderRadius = "5px";

        div.innerHTML = `
            <strong>Nombre:</strong> ${r.nombre} <br>
            <strong>Peso:</strong> ${r.peso} <br>
            <strong>Tamaño:</strong> ${r.tamaño} <br>
            <strong>Edad Promedio:</strong> ${r.edad} años
        `;
        contenedor.appendChild(div);
    });

    document.getElementById("pageInfo").textContent = `Página ${currentPage} de ${totalPages}`;
}

// Botones
document.getElementById("prevBtn").addEventListener("click", () => {
    if (currentPage > 1) {
        currentPage--;
        mostrarRazas();
    }
});

document.getElementById("nextBtn").addEventListener("click", () => {
    if (currentPage < totalPages) {
        currentPage++;
        mostrarRazas();
    }
});

// Mostrar la primera página
mostrarRazas();
</script>
